{
  "dashboard": {
    "id": null,
    "title": "System Logs",
    "tags": ["logs", "system"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "All Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 0
            }
          }
        },
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true
        }
      },
      {
        "id": 2,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\"} |= \"error\"",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "fixed",
              "fixedColor": "red"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 3,
        "title": "Warning Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\"} |= \"warn\"",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "fixed",
              "fixedColor": "yellow"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "refresh": "10s"
  }
}
